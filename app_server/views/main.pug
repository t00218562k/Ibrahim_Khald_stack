extends layout

block content
    section.vh-100.gradient-custom
        .container.py-5.h-100
                .row.justify-content-left.align-items-center.h-100
                    .col-12
                        .card.shadow-2-strong.card-registration
                            .card-body.mb-4.pb-2.pb-md-0.mb-md-5
                                .datatable
                                    table.table.table-bordered
                                        thead
                                            tr
                                                th.th-sm Name
                                                th.th-sm Date
                                                th.th-sm Type
                                                th.th-sm Price
                                                th.th-sm Saved
                                        tbody
                                        each transaction in transactions
                                            tr
                                                td= transaction.transactionsName
                                                td= transaction.DateOfTransaction
                                                td= transaction.Type
                                                td= transaction.Price
                                                td= transaction.Saved
    section.vh-100.gradient-custom
        .container.py-5.h-100
            .row.justify-content-center.align-items-center.h-100
                .col-12.col-lg-9.col-xl-7
                    .card.shadow-2-strong.card-registration(style='border-radius: 15px;')
                        .card-body.p-4.p-md-5
                            h3.mb-4.pb-2.pb-md-0.mb-md-5 Add Transaciton 
                            form
                                .row
                                    .col-md-6.mb-4
                                        .form-outline
                                            input#TransactionName.form-control.form-control-lg(type='text')
                                            label.form-label(for='firstName') Transaction Name
                                    .col-md-6.mb-4.d-flex.align-items-center
                                        .form-outline.datepicker.w-100
                                            input#birthdayDate.form-control.form-control-lg(type='date')
                                            label.form-label(for='birthdayDate') date
                                .row
                                    .col-md-6.mb-4.pb-2
                                        .form-outline
                                            input#emailAddress.form-control.form-control-lg(type='number')
                                            label.form-label(for='emailAddress') Price 
                                    .col-md-6.mb-4.pb-2
                                        .form-outline
                                            input#phoneNumber.form-control.form-control-lg(type='number')
                                            label.form-label(for='phoneNumber') Saved
                                .row 
                                   .col-md-6.mb-4.pb-2
                                        .form-outline                                         
                                            //drop down menu with style
                                            select#type.form-control.form-control-lg
                                                option(value="") Select Type
                                                option(value="Food") Need 
                                                option(value="Clothing") Want
                                                option(value="Entertainment") Bills
                                                option(value="Other") Saving
                                            label.form-label(for='type') Type
                                .mt-4.pt-2
                                    a(href="/main")
                                        input.btn.btn-primary.btn-lg(type='button' value='Add new entry')


                                